<?xml version="1.0" encoding="GBK"?>
<!-- Spring配置文件的根元素，使用spring-beans.xsdZxs束 -->
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns="http://www.springframework.org/schema/beans"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!-- 配置名person的Bean，其F是org.crazyit.app.service.Person -->
	<bean id="person" class="org.crazyit.app.service.Person">
		<!-- 控制{用setAxe()方法，⑷萜髦axe Bean作魅 -->
		<property name="axe" ref="axe"/>
		<property name="age" value="20"/>
	</bean>
	<!-- 配置名axe的Bean，其F是org.crazyit.app.service.Axe -->
	<bean id="axe" class="org.crazyit.app.service.Axe"/>
	<!-- 配置名win的Bean，其F是javax.swing.JFrame -->
	<bean id="win" class="javax.swing.JFrame"/>
	<!-- 配置名date的Bean，其F是java.util.Date -->
	<bean id="date" class="java.util.Date"/>
</beans>
